{
    "name": "Scraper Application",
    "description": "A command line tool to extract information from a single web page into various formats",
    "license": "BSD-3-Clause",
    "keywords": [
        "Scraping"
    ],
    "authors": [
        {
            "name": "Malte Riesch",
            "email": "malteriesch@googlemail.com"
        }
    ],
    "require": {
        "php": ">=5.4",
        "zendframework/zendframework": "2.3.*",
        "zfcampus/zf-console": "~1.0-dev",
        "symfony/dom-crawler" :"dev-master",
        "symfony/css-selector" :"dev-master"
        
    },
    "require-dev": {
        "phpunit/phpunit": "4.1.*",
        "mockery/mockery": "dev-master",
        "mikey179/vfsStream": "1.3.*@dev"
    },
    "autoload": {
        "psr-4": {"Scraper\\": "src/"}
    },
    "autoload-dev": {
        "psr-4": {"ScraperTests\\" :"tests/"}
    }
}
